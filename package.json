    "google-libphonenumber": "^3.2.22",
    "joi": "^17.4.2",
    "lodash": "^4.17.21",
    "rhea-promise": "^2.1.0",
    "stacktrace-parser": "^0.1.10",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/async": "^3.2.7",
    "@types/body-parser": "^1.19.1",
    "@types/boom": "^7.3.1",
    "@types/chai": "^4.2.21",
    "@types/chai-http": "^4.2.0",
    "@types/concurrently": "^6.2.1",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.28.0",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.172",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.9",
    "@types/request": "^2.48.7",
