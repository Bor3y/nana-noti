  "scripts": {
    "build-ts": "tsc",
    "build": "yarn run build-ts",
    "debug": "yarn run build && yarn run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "sms": "node dist/workers/sms.js",
    "test": "mocha -r ts-node/register/transpile-only 'test/**/*.ts'",
    "cover": "nyc yarn test",
    "start": "yarn run serve",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\""
  },
  "dependencies": {
    "@types/google-libphonenumber": "^7.4.21",
